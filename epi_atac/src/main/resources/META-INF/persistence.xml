<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="epi_atac">
        <!-- Nella persistence unit andremo ad inserire l'entities che andremo a creare -->
        <class>claudiopostiglione.entities.Mezzo</class>
        <class>claudiopostiglione.entities.Tratta</class>
        <class>claudiopostiglione.entities.TesseraUtente</class>
        <class>claudiopostiglione.entities.PuntoEmissione</class>
        <class>claudiopostiglione.entities.Biglietto</class>
        <class>claudiopostiglione.entities.MezzoTratta</class>
        <class>claudiopostiglione.entities.StatoMezzo</class>
        <class>claudiopostiglione.entities.Abbonamento</class>
        <properties>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/epi_atac"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>

</persistence>